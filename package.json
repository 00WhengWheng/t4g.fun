{
  "name": "t4g-fun",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "shared"
  ],
  "scripts": {
    "web:dev": "cd web && pnpm run dev",
    "web:build": "cd web && pnpm run build",
    "web:preview": "cd web && pnpm run preview",
    "mobile:start": "cd mobile && pnpm start",
    "mobile:android": "cd mobile && pnpm run android",
    "mobile:ios": "cd mobile && pnpm run ios",
    "install:all": "pnpm install && cd web && pnpm install && cd ../mobile && pnpm install",
    "lint": "cd web && pnpm run lint",
    "test": "echo \"No tests specified yet\""
  },
  "description": "Tag 4 Gift - A modern gift tagging solution",
  "keywords": [
    "react",
    "react-native",
    "vite",
    "typescript",
    "tailwind",
    "shadcn",
    "tanstack-router"
  ],
  "author": "Francesco",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.0.0",
    "eslint": "^9.0.0"
  }
}